<%= form_with(model: @post, local: true, url: {action: 'confirm'}) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class = "error" >
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content, placeholder: "What's happening?" %>
  </div>
  
  <div class="time">
    <%= update_at = DateTime.new; %>
    <%= update_at.strftime("%H:%M:%S") %>
  </div>
  <div class = "button">
    <%= form.submit %>
  </div>
<% end %>